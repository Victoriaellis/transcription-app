generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}


datasource db {
  provider = "postgresql"
}

model Transcript {
  id          String    @id @default(cuid())
  text        String
  createdAt   DateTime  @default(now())
  analysis    Analysis?
}

model Analysis {
  id            String   @id @default(cuid())
  transcriptId  String   @unique
  actionItems   Json
  decisions     Json
  createdAt     DateTime @default(now())
  transcript    Transcript @relation(fields: [transcriptId], references: [id])
}
